global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    user haproxy
    group haproxy
    daemon
    ssl-default-bind-options no-sslv3
    ssl-default-bind-ciphers HIGH:!aNULL:!MD5

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend https_in
    bind *:443 ssl crt /etc/letsencrypt/live/www.holberton.online/fullchain.pem crt-key /etc/letsencrypt/live/www.holberton.online/privkey.pem
    default_backend web_back

backend web_back
    balance roundrobin
    server web-01 6751-web-01:80 check
    server web-02 6751-web-02:80 check
